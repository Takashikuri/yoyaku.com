<!DOCTYPE html>
<html>
  <head>
    <title>予約.Com</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !flash[:validation_messages] %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <% end %>
      <% if logged_in? %>
      <nav class="navbar navbar-light bg-light" style="background-color: #e3f2fd;">
      
        <form class="form-inline">
          <a href="/pages">
          <button class="btn">  
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>ホーム画面
          </button>
          </a>
          <a href= "reservations/new">
          <button type="button" class="btn">  
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>予約登録
          </button>
          </a>
          <a href="/reservations">
          <button type="button" class="btn">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>予約一覧
          </button>
          </a>
          <a href="#">
          <button type="button" class="btn">
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>管理表
          </button>
          </a>
          <a href="#">
          <button type="button" class="btn">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>座席表
          </button>
          </a>
          <a href="/logout">
          <button type="button" class="btn">
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>ログアウト
          </button>
          </a>
        </form>
      </nav>
      <% end %>
    <%= yield %>
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
