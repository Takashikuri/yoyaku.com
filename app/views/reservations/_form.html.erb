
     <div class="row">
        <%= form_for @reservation do |f| %>
    
          <div class="col-md-offset-2 col-md-9 users-new-container">
            <div class="text-white">予約.com</div>
            <div class="form_group col-md-5">
                <%= f.label :予約登録日, class: 'text' %>
                <%= f.date_field :sign_up_day, class: 'form-control' %>
            </div>
            <div class="form_group col-md-offset-2 col-md-5">
                <%= f.label :予約日時, class: 'text' %>
                <%= f.datetime_field :reserve_day, class: 'form-control' %>
            </div>
            <div class="form_group col-md-5">
                <%= f.label :予約名, class: 'text' %>
                <%= f.text_field :reserve_name, placeholder: "予約 進",class: 'form-control' %>
            </div>
            <div class="form_group col-md-offset-2 col-md-5">
                <%= f.label :予約電話番号, class: 'text' %>
                <%= f.text_field :reserve_phone_number, placeholder: "090-1234-5678", class: 'form-control' %>
            </div>
            <div class="form_group col-md-5">
                <%= f.label :人数, class: 'text' %>
                <%= f.number_field :member, class: 'form-control' %>
            </div>
            <div class="form_group col-md-offset-2 col-md-5">
                <%= f.label :コース名, class: 'text' %>
                <%= f.select :course, ["Aコース","Bコース","Cコース"], {include_blank: '選択してください'}, class: 'form-control' %>
            </div>
            <div class="form_group col-md-5">
                <%= f.label :予約媒体, class: 'text' %>
                <%= f.select :medium,["ホットペッパー","ぐるなび","食べログ","その他"], {include_blank: '選択してください'}, class: 'form-control' %>
            </div>
            <div class="form_group col-md-offset-2 col-md-5">
                <%= f.label :席番号, class: 'text' %>
                <%= f.select :seat_number,[10,11,12,13,14,15,20,21,22,23,24,25,27,30,31,33,34,36,40,41,42,43,44,45,46,["11,15"],["13,14"],["12,13,14"],["21,22"],["23,24"],["25,27"],["21,22,25,27"],["31-33"],["34-36"],["31-34"],["41-42"],["41-43"],["41-44"],["42-44"],["43-44"],["43-46"],["45-46"],["42-46"]],{include_blank: '選択してください'}, class: 'form-control' %>
            </div>
          </div>
          <% if request.path_info = new_reservation_path %>
          
              <div class="col-md-offset-3 col-md-3">
               <%= f.submit "登録", class: "btn-block" %>
              </div>
              <div class="col-md-offset-1 col-md-3">
                <%= button_tag 'クリア', type:'reset', class: 'btn-block' %>
              </div>
          <% else%>
              <div class="col-md-offset-3 col-md-3">
               <%= f.submit "更新", class: "btn-block" %>
              </div>
              <div class="col-md-offset-1 col-md-3">
                <%= link_to '戻る', reservations_path, class: 'btn-block' %>
              </div>
          <% end %>
        <% end %>
    </div>
     
   