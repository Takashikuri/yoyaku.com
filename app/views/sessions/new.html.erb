<div class="session-wrapper">
  <div class="container">
    <h2>ログイン画面</h2>
      <div class="col-md-offset-9 col-md-3">
        <button class="btn-default btn-lg" href="users/new" type="submit">新規登録はこちら</button>
      </div>
        <div class="row">
          <div class="col-md-offset-2 col-md-9 users-new-container">
            <div class="text-white">予約.com</div>
            <%= form_for :session, url: root_path do |f| %>  
            <div class="form-group">
              <%= f.label :ID, class: 'text' %>
              <%= f.text_field :id, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :暗証番号, class: 'text' %>
              <%= f.text_field :password, class: 'form-control' %>
            </div>
            <div class="col-md-offset-6 col-md-6">
              <%= link_to "ログイン", root_path class: "btn-block" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
