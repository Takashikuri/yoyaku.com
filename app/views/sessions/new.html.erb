<div class="session-wrapper">
  <div class="container">
    <h2>ログイン画面</h2>
      <div class="col-md-offset-9 col-md-3">
        <%= link_to "新規登録はこちら", new_user_path, class: "btn btn-white" %>
      </div>
        <div class="row">
          <div class="col-md-offset-2 col-md-9 users-new-container">
            <div class="text-white">予約.com</div>
            <%= form_for :session, url: login_path do |f| %>  
            <div class="form-group">
              <%= f.label :email, class: 'text' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード, class: 'text' %>
              <%= f.text_field :password, class: 'form-control' %>
            </div>
            <div class="col-md-offset-6 col-md-6">
              <%= f.submit "ログイン", class: "btn-block" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
