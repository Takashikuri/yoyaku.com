
<div class="users-new-wrapper">
  <div class="container">
    <h2>User登録画面</h2>
      <div class= "col-md-offset-9 col-md-3">
        <%= link_to "ログインはこちら", root_path, class: "btn btn-white" %>
      </div>
        <div class="row">
          <div class="col-md-offset-2 col-md-9 users-new-container">
            <div class="text-white">予約.com</div>
            <% if flash.any? %>
              <div class="alert-user alert-warning">
                <ul>
                  <% flash[:validation_messages].each do |message| %>
                <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <%= form_for @user do |f| %>  
            <div class="form-group">
              <%= f.label :店舗名, class: 'text' %>
              <%= f.text_field :store_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :電話番号, class: 'text' %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :住所, class: 'text' %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'text' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード, class: 'text' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード再入力, class: 'text' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <div class="col-md-offset-3 col-md-3">
              <%= f.submit "登録", class: "btn-block" %>
            </div>
            <div class="col-md-3">
              <%= button_tag 'クリア', type:'reset', class: 'btn-block' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>