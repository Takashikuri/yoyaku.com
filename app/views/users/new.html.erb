<div class="users-new-wrapper">
  <div class="container">
    <h2>User登録画面</h2>
      <div class= "col-md-3">
        <button class="btn-default btn-lg" href="#" type="submit">予約.com</button>
      </div>
        <div class="row">
          <div class="col-md-offset-2 col-md-9 users-new-container">
            <div class="text-white">予約.com</div>
            <%= form_for @user do |f| %>  
            <div class="form-group">
              <%= f.label :店舗名, class: 'text' %>
              <%= f.text_field :store_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :電話番号, class: 'text' %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :住所, class: 'text' %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'text' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="col-md-offset-3 col-md-3">
              <%= link_to "登録", root_path, class: "btn-block" %>
            </div>
            <div class="col-md-3">
              <%= link_to "削除", root_path, class: "btn-block" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>